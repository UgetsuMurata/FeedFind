<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?background"
    tools:context=".Features.GPSMap">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?toolbarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar_icon"
                android:layout_width="31dp"
                android:layout_height="29dp"
                android:contentDescription="Location Icon"
                android:src="@drawable/gps_icon"
                app:tint="?text" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:text="GPS"
                android:layout_marginLeft="10dp"
                android:textColor="?text"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:id="@+id/open_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingHorizontal="20dp"
            android:contentDescription="Location Icon"
            android:src="@drawable/menu"
            app:tint="?text" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/geofence_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/custom_toolbar"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Geofence"
            android:gravity="center"
            android:fontFamily="@font/cabin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?text"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Geofence Radius:"
                android:textSize="14sp"
                android:textColor="?text"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp" />
            <ImageView
                android:id="@+id/decrease_radius"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_minus"
                android:paddingHorizontal="10dp"
                app:tint="?text"/>
            <TextView
                android:id="@+id/radius"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="14sp"
                android:textColor="?text"
                android:fontFamily="@font/quicksand"/>
            <ImageView
                android:id="@+id/increase_radius"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_plus"
                android:paddingHorizontal="10dp"
                app:tint="?text"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Click the map to place the geofence."
            android:textSize="12sp"
            android:textColor="?text"
            android:fontFamily="@font/quicksand"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/geofence_settings"
        app:layout_constraintBottom_toTopOf="@id/cancel_save_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/pet_outside_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:text="No. of Pets Outside:"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/pet_outside_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:text="1"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/corner_menu_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <!--Menu Minimizer-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/corner_menu_close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/corner_menu_button"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/customview_selectiveroundcorner2"
                        app:backgroundTint="?background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="X"
                        android:textColor="?emphasis"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--Menu-->
                <ImageView
                    android:id="@+id/corner_menu_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customview_selectiveroundcorner"
                    app:backgroundTint="?background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:id="@+id/corner_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/corner_menu_button"
                    app:layout_constraintBottom_toBottomOf="@id/corner_menu_button"
                    app:layout_constraintStart_toStartOf="@id/corner_menu_button"
                    app:layout_constraintEnd_toEndOf="@id/corner_menu_button"
                    android:layout_margin="10dp"
                    android:animateLayoutChanges="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/focus_geofence"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/geofence"
                            android:layout_marginEnd="10dp"/>
                        <ImageView
                            android:id="@+id/focus_phone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/phone"
                            android:layout_marginEnd="10dp"
                            app:tint="?emphasis"/>
                        <ImageView
                            android:id="@+id/focus_pets"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/dog_paw"
                            android:layout_marginEnd="10dp"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/option_satellite_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Satellite View"
                        android:fontFamily="@font/cabin"
                        app:switchPadding="10dp"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/option_geofence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Geofence"
                        android:checked="true"
                        android:fontFamily="@font/cabin"
                        app:switchPadding="10dp"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/option_pet_names"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pet Names"
                        android:fontFamily="@font/cabin"
                        app:switchPadding="10dp"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/cancel_save_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:visibility="gone">
        <androidx.cardview.widget.CardView
            android:id="@+id/cancel_geofence"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/grey">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="?reverseText"
                android:paddingHorizontal="30dp"
                android:fontFamily="@font/cabin"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/save_geofence"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="?emphasis">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="?text"
                android:paddingHorizontal="30dp"
                android:fontFamily="@font/cabin"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>