<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?background"
    tools:context=".edit_pet_info">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?toolbarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/architects_daughter"
        android:text="Edit Pet Info"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/custom_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pet_dp"
        android:layout_width="162dp"
        android:layout_height="168dp"
        android:layout_marginTop="14dp"
        android:padding="5dp"
        android:src="@drawable/pet_profile_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_toolbar"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo"
        android:text="Pet Information"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_dp" />

    <EditText
        android:id="@+id/Pet_name"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cutom_input_editpet"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/emphasis_day"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/Pet_Age"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/cutom_input_editpet"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/emphasis_day"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/pet_birthday"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/cutom_input_editpet"
        android:ems="10"
        android:hint="Birthday"
        android:inputType="date"
        android:padding="10dp"
        android:textColorHint="@color/emphasis_day"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/pet_weight"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/cutom_input_editpet"
        android:ems="10"
        android:hint="Weight"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/emphasis_day"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/pet_Sex"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/cutom_input_editpet"
        android:ems="10"
        android:hint="Sex"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/emphasis_day"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/nxt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/cutom_input_editpet"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_Sex" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_pic"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:backgroundTint="?background"
        android:clickable="true"
        android:contentDescription="@string/gps"
        app:layout_constraintBottom_toBottomOf="@+id/pet_dp"
        app:layout_constraintEnd_toEndOf="@+id/pet_dp"
        app:srcCompat="@drawable/ic_plus" />


</androidx.constraintlayout.widget.ConstraintLayout>